{
  "name": "parcel-starter",
  "version": "1.0.1",
  "description": "Simple Web Starter for React, supports Javascript and Typescript",
  "scripts": {
    "start": "parcel index.html",
    "build": "parcel build index.html",
    "test": "jest --passWithNoTests",
    "clean": "rimraf dist .cache",
    "clean:dist": "rimraf node_modules",
    "clean:all": "yarn clean:dist && yarn clean:pkg",
    "lint": "eslint \"./src/**/*.{js,ts,tsx}\"",
    "lint:fix": "yarn lint --quiet --fix",
    "types": "tsc --noEmit -p .",
    "types:watch": "tsc --noEmit -p . --watch",
    "validate": "yarn types && yarn lint && yarn test"
  },
  "keywords": [
    "starter",
    "parcel",
    "react",
    "typescript"
  ],
  "author": "Pervez Iqbal",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@babel/plugin-proposal-class-properties": "7.12.1",
    "@testing-library/jest-dom": "5.11.5",
    "@testing-library/react": "11.1.0",
    "@types/chance": "1.1.0",
    "@types/jest": "26.0.15",
    "@types/jsdom": "16.2.5",
    "@types/react": "16.9.55",
    "@types/react-dom": "16.9.9",
    "@types/react-router": "5.1.8",
    "@types/react-router-dom": "5.1.6",
    "@typescript-eslint/eslint-plugin": "4.6.0",
    "@typescript-eslint/parser": "4.6.0",
    "babel-eslint": "10.1.0",
    "chance": "1.1.7",
    "confusing-browser-globals": "1.0.10",
    "eslint": "7.12.1",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-functional": "3.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.0",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-no-null": "1.0.2",
    "eslint-plugin-prefer-arrow": "1.2.2",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-unicorn": "23.0.0",
    "husky": "4.3.0",
    "jest": "26.6.1",
    "jsdom": "16.4.0",
    "lint-staged": "10.5.0",
    "parcel-bundler": "1.12.4",
    "prettier": "2.1.2",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.3",
    "typescript": "4.0.5"
  },
  "dependencies": {
    "date-fns": "2.16.1",
    "formik": "2.2.1",
    "immer": "7.0.14",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-router": "5.2.0",
    "react-router-dom": "5.2.0",
    "use-immer": "0.4.1",
    "yup": "0.29.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "pre-push": "yarn validate"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:fix",
      "yarn prettier --write"
    ],
    "src/**/*.{js,jsx}": [
      "yarn eslint --fix",
      "yarn prettier --write"
    ],
    "src/**/*.{json,css}": [
      "yarn prettier --write"
    ]
  }
}
