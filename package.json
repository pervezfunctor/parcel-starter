{
  "name": "parcel-starter",
  "version": "1.0.1",
  "description": "Simple Web Starter for React, supports Javascript and Typescript",
  "main": "index.js",
  "scripts": {
    "start": "parcel index.html --open",
    "build": "parcel build index.html",
    "test": "jest --passWithNoTests",
    "clean": "rimraf dist .cache",
    "clean:dist": "rimraf node_modules",
    "clean:all": "yarn clean:dist && yarn clean:pkg",
    "lint:cmd": "tslint -p tsconfig.json -c tslint.json",
    "lint": "yarn lint:cmd 'src/**/*.tsx' 'src/**/*.ts'",
    "types": "tsc --noEmit -p .",
    "types:watch": "tsc --noEmit -p . --watch",
    "validate": "yarn types && yarn lint && yarn test",
    "lint:fix": "yarn lint --fix"
  },
  "keywords": [
    "starter",
    "parcel",
    "react",
    "typescript"
  ],
  "author": "Pervez Iqbal",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.11.0",
    "@babel/plugin-proposal-class-properties": "7.10.4",
    "@testing-library/jest-dom": "5.11.2",
    "@testing-library/react": "10.4.7",
    "@types/chance": "1.1.0",
    "@types/jest": "26.0.8",
    "@types/jsdom": "16.2.3",
    "@types/react": "16.9.44",
    "@types/react-dom": "16.9.8",
    "@types/react-router": "5.1.8",
    "@types/react-router-dom": "5.1.5",
    "@typescript-eslint/eslint-plugin": "3.7.1",
    "@typescript-eslint/eslint-plugin-tslint": "3.7.1",
    "@typescript-eslint/parser": "3.7.1",
    "babel-eslint": "10.1.0",
    "chance": "1.1.6",
    "eslint": "7.6.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "23.20.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.5",
    "husky": "4.2.5",
    "jest": "26.2.2",
    "jsdom": "16.3.0",
    "lint-staged": "10.2.11",
    "parcel-bundler": "1.12.4",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "ts-jest": "26.1.4",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0",
    "tslint-immutable": "6.0.1",
    "tslint-react": "5.0.0",
    "typescript": "3.9.7",
    "typescript-tslint-plugin": "0.5.5"
  },
  "dependencies": {
    "date-fns": "2.15.0",
    "formik": "2.1.5",
    "immer": "7.0.7",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-router": "5.2.0",
    "react-router-dom": "5.2.0",
    "use-immer": "0.4.1",
    "yup": "0.29.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "pre-push": "yarn validate"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:cmd --fix",
      "yarn prettier --write"
    ],
    "src/**/*.{js,jsx}": [
      "yarn eslint --fix",
      "yarn prettier --write"
    ],
    "src/**/*.{json,css}": [
      "yarn prettier --write"
    ]
  }
}
